<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EstiloVertical" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/VerticalLayo</item>


    </style>

    <style name="EstiloH"
        parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">top</item>
    <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/HorizontalLayo</item>


</style>

    <style name="EstiloTxt1" parent="AppTheme">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>




    </style>

    <style name="EstiloET1" parent="AppTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EstiloET1.Nombre" parent="EstiloET1">
        <item name="android:hint">Introduzca Tu Nombre</item>
        <item name="android:inputType">textCapWords</item>
    </style>
    <style name="EstiloET1.Apellidos" parent="EstiloET1" >
        <item name="android:hint">Introduzca Tus Apellidos</item>
        <item name="android:inputType">textCapWords</item>

    </style>
    <style name="EstiloET1.Edad" parent="EstiloET1">
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="EstiloRG" parent="AppTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
     <style name="EstiloS" parent="AppTheme" >
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_weight">1</item>
     </style>

        <style name="EstiloBtn" parent="AppTheme">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:gravity">center</item>
        </style>
        <style name="EstiloTxt2" parent="AppTheme" >
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">119dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:ems">10</item>
            <item name="android:textStyle">bold</item>
            <item name="android:inputType">textPersonName</item>

        </style>

    <style name="nuevoTema" parent="AppTheme" >
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>


</resources>

